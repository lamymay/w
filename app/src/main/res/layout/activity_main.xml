<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!--    <ListView-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:id="@+id/listView1"-->
    <!--            android:layout_marginTop="34dp"-->
    <!--            />-->

    <RelativeLayout
            android:id="@+id/crudBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

        <Button
                android:id="@+id/saveBtn"
                android:text="save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />

        <Button
                android:id="@+id/deleteBtn"
                android:text="delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/saveBtn"
                />

        <Button
                android:id="@+id/updateBtn"
                android:text="update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/deleteBtn"
                />


        <Button
                android:id="@+id/listAllBtn"
                android:text="list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/updateBtn"
                android:layout_gravity="center_horizontal"/>

        <Button
                android:id="@+id/getOneBtn"
                android:text="get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/listAllBtn"
                android:layout_gravity="center_horizontal"/>
    </RelativeLayout>


        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/crudBtn"
                >

            <TextView
                    android:id="@+id/outputText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="显示联系人信息"
                    />
        </ScrollView>

    <!--
       android:padding="7dp"
    -->


</RelativeLayout>
